@model veterinary_client_app.Models.Entities.Owner

@{
    ViewData["Title"] = "Owner Details";
}

<h2>Details</h2>

<div>
    <h4>Owner</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.OwnerId
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
         <dt class="col-sm-2">
             Surname
             </dt>
        <dd class="col-sm-10">
            @Model.Surname
            </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
        
          @if (Model.Pets != null && Model.Pets.Any())
                        {
                            <dt>Pets</dt>
                            <dd>
                                <ul>
                                @foreach (var pet in Model.Pets)
                                {
                                    <li>@pet.Name - @pet.Type</li>
                                }
                                </ul>
                            </dd>
                        }
                        else
                        {
                            <dt>Pets</dt>
                            <dd>No pets owned</dd>
                        }
        
    </dl>
    <a href="@Url.Action("Index")" class="btn btn-outline-dark">Back to List</a>
    @if (User.IsInRole("Admin"))
    {
    @:<a href="@Url.Action("Edit", "Owner", new { id = Model.OwnerId })" class="btn btn-secondary">Edit</a> 
    @:<a href="@Url.Action("Delete", "Owner", new { id = Model.OwnerId })" class="btn btn-danger" >Delete</a> 
    }
</div>