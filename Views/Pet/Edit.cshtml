@model veterinary_client_app.Models.Entities.Pet

@{
    ViewData["Title"] = "Edit Pet";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="PetId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div style="display: flex; flex-direction: column; gap: 1rem">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OwnerId" class="control-label">Owner</label>
        <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
    </div>

    <div class="form-group">
        <label>Vaccines</label>
        <select class="form-control" multiple="multiple" name="SelectedVaccineIds" asp-items="ViewBag.VaccineIds"></select>
    </div>


    <div class="form-group">
            <a href="@Url.Action("Index")" class="btn btn-outline-dark">Back to List</a>
        <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
