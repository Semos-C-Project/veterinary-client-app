@model veterinary_client_app.Models.Entities.Pet

<h2>Details</h2>

<div>
    <h4>Pet</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        
        <dt>Type</dt>
        <dd>@Model.Type</dd>
        
        <dt>Age</dt>
        <dd>@Model.Age</dd>
        
        <dt>Owner</dt>
        <dd>@Model.Owner.Name @Model.Owner.Surname</dd>
        
          @if (Model.Vaccines != null && Model.Vaccines.Any())
                {
                    <dt>Vaccines</dt>
                    <dd>
                        <ul>
                        @foreach (var vaccine in Model.Vaccines)
                        {
                            <li>@vaccine.Name</li>
                        }
                        </ul>
                    </dd>
                }
                else
                {
                    <dt>Vaccines</dt>
                    <dd>No vaccines recorded</dd>
                }
    </dl>
</div>

<p>
    <a href="@Url.Action("Index")" class="btn btn-outline-dark">Back to List</a> 
    @if (User.IsInRole("Admin"))
                     {
                         @: <a href="@Url.Action("Edit", new { id = Model.PetId })" class="btn btn-primary">Edit</a>
                     } 
</p>