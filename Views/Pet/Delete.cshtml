@model veterinary_client_app.Models.Entities.Pet

@{
    ViewData["Title"] = "Delete Pet";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this pet?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Type</dt>
        <dd>@Model.Type</dd>

        <dt>Age</dt>
        <dd>@Model.Age</dd>
        
        <dt>Owner</dt>
        <dd>@Model.Owner.Name @Model.Owner.Surname</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PetId" />
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancel</a>
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
