@model veterinary_client_app.Models.Entities.Vaccine

@{
    ViewData["Title"] = "Delete Vaccine";
}

<h2>Delete Vaccine</h2>

<h3>Are you sure you want to delete this pet?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VaccineId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>

