@using Microsoft.AspNetCore.Mvc.TagHelpers
@model veterinary_client_app.Models.ViewModels.RegisterViewModel

<div class="bg-gradient">
    <h1 style="text-align: center; margin-top: -2rem; margin-bottom: 1rem">Register</h1>
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label>Email</label>
        <input asp-for="Email"/>
        <span asp-validation-for="Email" class="text-danger"></span>

        <label>Password</label>
        <input asp-for="Password"/>
        <span asp-validation-for="Password" class="text-danger"></span>

        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword"/>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <div class="form-group">
            <label asp-for="AdminPIN" class="control-label"></label>
            <input asp-for="AdminPIN" class="form-control"/>
            <span asp-validation-for="AdminPIN" class="text-danger"></span>
        </div>

        <button type="submit">Register</button>
    </form>
</div>